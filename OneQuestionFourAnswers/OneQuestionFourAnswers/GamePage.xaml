<Page x:Class="OneQuestionFourAnswers.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneQuestionFourAnswers"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="GamePage" Loaded="OnPageLoaded" IsEnabled="{Binding PageIsEnable}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourcesDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid DataContext="{StaticResource MainWindowVM}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="140"></RowDefinition>
        </Grid.RowDefinitions>
        <local:CircularButton ControlCommand="{Binding Source={StaticResource MainWindowVM}, Path=DoStopTimerCommand}"  x:Name="BackButton" Margin="30,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="0" EnableBackgroundImage="{StaticResource BackButtonIcon}" EnableBackgroundImageActive="{StaticResource BackButtonActiveIcon}"></local:CircularButton>
        <TextBlock FontSize="{Binding Source={StaticResource MainWindowVM},Path=QuestionFontSize}" Width="{Binding Source={StaticResource MainWindowVM}, Path=QuestionBlockWidth}" HorizontalAlignment="Center" Grid.Row="0" Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" Margin="10,5,10,5"
                       Text="{Binding Source={StaticResource MainWindowVM}, Path=QuestionAnswers.QuestionText, Mode=TwoWay}"/>
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:StrechableButton SizeOfFont="{Binding Source={StaticResource MainWindowVM},Path=AnswerFontSize}" ButtonText="{Binding Source={StaticResource MainWindowVM}, Path=QuestionAnswers.Answers[0].Text, Mode=OneWay}" Click="AnswerButtonClick" Grid.Column="0" Margin="10" x:Name="AButton" Tag="0" State="{Binding Source={StaticResource MainWindowVM}, Path=AnswersState[0], UpdateSourceTrigger=PropertyChanged}"></local:StrechableButton>
            <local:StrechableButton SizeOfFont="{Binding Source={StaticResource MainWindowVM},Path=AnswerFontSize}" ButtonText="{Binding Source={StaticResource MainWindowVM}, Path=QuestionAnswers.Answers[1].Text, Mode=OneWay}" Click="AnswerButtonClick" Grid.Column="1" Margin="10" x:Name="BButton" Tag="1" State="{Binding Source={StaticResource MainWindowVM}, Path=AnswersState[1], UpdateSourceTrigger=PropertyChanged}"></local:StrechableButton>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:StrechableButton SizeOfFont="{Binding Source={StaticResource MainWindowVM},Path=AnswerFontSize}" ButtonText="{Binding Source={StaticResource MainWindowVM}, Path=QuestionAnswers.Answers[2].Text, Mode=OneWay}" Click="AnswerButtonClick" Grid.Column="0" Margin="10" x:Name="CButton" Tag="2" State="{Binding Source={StaticResource MainWindowVM}, Path=AnswersState[2], UpdateSourceTrigger=PropertyChanged}"></local:StrechableButton>
            <local:StrechableButton SizeOfFont="{Binding Source={StaticResource MainWindowVM},Path=AnswerFontSize}" ButtonText="{Binding Source={StaticResource MainWindowVM}, Path=QuestionAnswers.Answers[3].Text, Mode=OneWay}" Click="AnswerButtonClick" Grid.Column="1" Margin="10" x:Name="DButton" Tag="3" State="{Binding Source={StaticResource MainWindowVM}, Path=AnswersState[3], UpdateSourceTrigger=PropertyChanged}"></local:StrechableButton>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="195"></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="160"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,0,20" x:Name="Hints"  Grid.Column="0" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <local:CircularButton x:Name="StatisticsButton" Grid.Column="0" EnableBackgroundImage="{StaticResource StatisticsHintButtonIcon}" DisableBackgroundImage="{StaticResource StatisticsHintUsedButtonIcon}" EnableBackgroundImageActive="{StaticResource StatisticsHintButtonActiveIcon}"></local:CircularButton>
                <local:CircularButton ControlCommand="{Binding Source={StaticResource MainWindowVM}, Path=DoUseHintTimeCommand}"  x:Name="TimeButton" Grid.Column="1" EnableBackgroundImage="{StaticResource TimeHintButtonIcon}" DisableBackgroundImage="{StaticResource TimeHintUsedButtonIcon}" EnableBackgroundImageActive="{StaticResource TimeHintButtonActiveIcon}"></local:CircularButton>
                <local:CircularButton ControlCommand="{Binding Source={StaticResource MainWindowVM}, Path=DoUseHintTwoAnswersCommand}" x:Name="TwoAnswersButton" Grid.Column="2" DisableBackgroundImage="{StaticResource TwoAnswersHintUsedButtonIcon}" EnableBackgroundImage="{StaticResource TwoAnswersHintButtonIcon}" EnableBackgroundImageActive="{StaticResource TwoAnswersHintButtonActiveIcon}"></local:CircularButton>
            </Grid>
            <Viewbox Grid.Column="1" Stretch="Uniform">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}" Margin="5" Text="Счeт:"></TextBlock>
                    <TextBlock x:Name="Score" Grid.Column="1" Style="{StaticResource TextBlockStyle}" Margin="5"
                               Text="{Binding Source={StaticResource MainWindowVM}, Path=GameScore, Mode=OneWay}"></TextBlock>
                </Grid>
            </Viewbox>
            <Grid Grid.Column="2" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"></ColumnDefinition>
                    <ColumnDefinition Width="65"></ColumnDefinition>
                    <ColumnDefinition Width="65"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <local:LifeIcon HorizontalAlignment="Center" Grid.Column="0"></local:LifeIcon>
                <local:LifeIcon HorizontalAlignment="Center" Grid.Column="1"></local:LifeIcon>
                <local:LifeIcon HorizontalAlignment="Center" Grid.Column="2"></local:LifeIcon>
            </Grid>
            <Viewbox Grid.Column="3" Stretch="Uniform">
                <Image  x:Name="Clock" Source=".\VisualResources\Images\Time.png" Height="50" Width="50" Margin="5" RenderTransformOrigin=".5,.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="0" />
                    </Image.RenderTransform>
                </Image>
            </Viewbox>
            <Viewbox Grid.Column="4" Stretch="Uniform" HorizontalAlignment="Left">
                <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockStyle}" FontSize="40" x:Name="Time" Text="{Binding Source={StaticResource MainWindowVM}, Path=Time, Mode=OneWay}" Margin="15"></TextBlock>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
