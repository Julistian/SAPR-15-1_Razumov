<Page x:Class="OneQuestionFourAnswers.InformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneQuestionFourAnswers"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="InformationPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourcesDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" HorizontalAlignment="Left" Style="{StaticResource BackButtonStyle}" Click="Button_Click"></Button>
        <Viewbox Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource TextBlockStyle}" FontSize="50" HorizontalAlignment="Left" Text="Об игре:"></TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="1" Stretch="Uniform">
            <TextBlock Width="250" Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" Margin="10,5,10,5" TextAlignment="Left" Text="В данной игре вам предстоит отвечать на вопросы разных категорий. Вам будет предоставляться 4 варианта ответа. Лишь один из них является верным. За каждый верный ответ вы будете получать 10 очков. Время, за которое вы должны выбрать - ограничено (1 минута), поэтому вас стоит принимать решение быстро. Желаем вам удачи!"/>
        </Viewbox>
        <Viewbox Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Grid.Row="2" Style="{StaticResource TextBlockStyle}" FontSize="50" Text="Спасительные кнопки"></TextBlock>
        </Viewbox>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Image Grid.Row="2" Style="{StaticResource ImageStyle}" Source="VisualResources\Images\TwoAnswersIcon.png"/>
                <Image Grid.Row="1" Style="{StaticResource ImageStyle}" Source="VisualResources\Images\TimeIcon.png"/>
                <Image Grid.Row="0" Style="{StaticResource ImageStyle}" Source="VisualResources\Images\StatisticsIcon.png"/>
            </Grid>
            <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Style="{StaticResource TextBlockStyle}" TextAlignment="Left" Text="Выводит статистику ответов воображаемых зрителей"/>
                    <TextBlock Grid.Row="1" Style="{StaticResource TextBlockStyle}" TextAlignment="Left" Text="Дает вам дополнительную минуту"/>
                    <TextBlock Grid.Row="2" Style="{StaticResource TextBlockStyle}" TextAlignment="Left" Text="Убирает два неверных варианта"/>
                </Grid>
            </Viewbox>
        </Grid>
        <TextBlock Grid.Row="4" Style="{StaticResource TextBlockStyle}" FontSize="20" VerticalAlignment="Bottom" Text="Разработал: Разумов Юрий, МИСиС, 2017 год"></TextBlock>
    </Grid>
</Page>
