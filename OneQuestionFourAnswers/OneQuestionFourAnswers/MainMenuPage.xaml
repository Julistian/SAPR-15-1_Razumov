<Page x:Class="OneQuestionFourAnswers.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneQuestionFourAnswers"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"></Image>
        <Button Content="Начать игру" Grid.Row="1" Margin="80,10,80,10" Click="Button_Click_Start_Game"></Button>
        <Button Content="Обновить базу вопросов" Grid.Row="2" Margin="80,10,80,10"></Button>
        <Button Content="Таблица рекордов" Grid.Row="3" Margin="80,10,80,10"></Button>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="30" Width="30" Margin="10" HorizontalAlignment="Left"></Button>
            <Button Grid.Column="1" Height="30" Width="30" Margin="10" HorizontalAlignment="Right"></Button>
        </Grid>
    </Grid>
</Page>
