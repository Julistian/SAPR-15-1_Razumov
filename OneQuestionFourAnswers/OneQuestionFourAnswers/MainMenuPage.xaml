<Page x:Class="OneQuestionFourAnswers.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneQuestionFourAnswers"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenuPage" Loaded="OnPageLoaded" KeepAlive="True">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourcesDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <local:StrechTextBlock Grid.Row="0" TextBlockText="1 вопрос - 4 ответа"></local:StrechTextBlock>
        <Button x:Name="StartBatton" Grid.Row="1" Style="{StaticResource ButtonStyle}" Margin="100,5,100,5" Click="ButtonClickStartGame">
            <local:StrechTextBlock Margin="5" TextBlockText="Начать игру"></local:StrechTextBlock>
        </Button>
        <Button x:Name="UpdateBatton" Grid.Row="2" Style="{StaticResource ButtonStyle}" Margin="100,5,100,5" Click="ButtonClickRefresh">
            <local:StrechTextBlock Margin="5" TextBlockText="Обновить"></local:StrechTextBlock>
        </Button>
        <Button Grid.Row="3" Style="{StaticResource ButtonStyle}" Margin="100,5,100,5" Click="HighscoreButton">
            <local:StrechTextBlock Margin="5" TextBlockText="Таблица рекордов"></local:StrechTextBlock>
        </Button>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:CircularButton Margin="30,0,0,0" HorizontalAlignment="Left" x:Name="InformationButton" Grid.Column="0" BackgroundImage="{StaticResource InformationButtonIcon}" BackgroundImageActive="{StaticResource InformationButtonIconActive}"></local:CircularButton>
            <local:CircularButton Margin="0,0,30,0" HorizontalAlignment="Right" x:Name="SoundButton" Grid.Column="1" BackgroundImage="{StaticResource SoundButtonIcon}" BackgroundImageActive="{StaticResource SoundButtonIconActive}"></local:CircularButton>
        </Grid>
    </Grid>
</Page>
