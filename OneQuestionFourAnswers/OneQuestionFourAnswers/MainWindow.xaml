<Window x:Class="OneQuestionFourAnswers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneQuestionFourAnswers"
        mc:Ignorable="d"
        Icon="VisualResources\WindowIcon.ico"
        Title="MainWindow" Height="600" Width="725" MinHeight="450" MinWidth="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourcesDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StatusBar x:Name="UpdateBar" DockPanel.Dock="Bottom" Height="35" Visibility="Collapsed">
            <TextBlock Style="{StaticResource TextBlockStyle}" Text="Идет загрузка обновлений" FontSize="25" Margin="5,0,0,0"/>
            <Viewbox Stretch="Fill" Margin="5">
                <ProgressBar Grid.Column="1" IsIndeterminate="True"/>
            </Viewbox>
        </StatusBar>
        <Frame Name="Main" NavigationUIVisibility="Hidden" Source="/OneQuestionFourAnswers;component/MainMenuPage.xaml" Background="{StaticResource BackgroundImage}"/>
    </DockPanel>
</Window>
